# ============================================================================
# BIMFlow Suite - Environment Variables Example
# ============================================================================
# Copy this file to .env and update the values for your environment.
# Do NOT commit .env to version control (it contains sensitive information).
# ============================================================================

# ============================================================================
# DJANGO SETTINGS
# ============================================================================
DJANGO_SETTINGS_MODULE=config.settings.local
SECRET_KEY=your-secret-key-change-this-in-production-generate-a-secure-one
DEBUG=True

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME
DATABASE_URL=postgresql://bimflow_user:changeMe@localhost:5432/bimflowsuite_db

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Used for Celery task queue and caching
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
# Task broker for async tasks (IFC generation, compliance checks)
CELERY_BROKER_URL=redis://localhost:6379/0

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
# Use S3 for production, local file storage for development
USE_S3=False

# AWS S3 Configuration (if USE_S3=True)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# For development, console backend prints emails to stdout
# For production, use SMTP or third-party email service
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for cross-origin requests (frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ============================================================================
# ALLOWED HOSTS
# ============================================================================
# Hosts allowed to serve the Django application
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# OPENAI CONFIGURATION (Optional)
# ============================================================================
# For AI-powered features if integrated
# OPENAI_API_KEY=sk-your-api-key-here

# ============================================================================
# RULEPACKS DIRECTORY (Optional)
# ============================================================================
# Path to custom rule packs for compliance checking
# BIMFLOW_RULEPACKS_DIR=/path/to/custom/rulepacks

# ============================================================================
# LOGGING CONFIGURATION (Optional)
# ============================================================================
# Set to True for verbose logging in development
LOG_LEVEL=INFO

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================
# These should be different in production
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
